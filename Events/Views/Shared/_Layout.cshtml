<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/Img/now-ui-kit/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Content/Img/now-ui-kit/favicon.png">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title - Events Manager</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    
    <link href="~/Content/Css/Bootstrap4/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Css/now-ui-kit/now-ui-kit.css" rel="stylesheet" />
    <link href="~/Content/Css/style.css" rel="stylesheet" />
</head>
<body class="login-page sidebar-collapse">
    <header>
        <nav class="navbar navbar-expand-lg bg-primary fixed-top navbar-transparent " color-on-scroll="50" id="cabecera">
            <div class="container">
                <div class="navbar-translate">
                    <a  class="navbar-brand a-link" href="~/Home/Index" rel="tooltip" title="Diseño e innovación" data-placement="bottom" target="_self">
                        Administrador de Eventos
                    </a>
                    <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse justify-content-end" id="navigation" data-nav-image="~/Content/Img/now-ui-kit/blurred-image-1.jpg" >
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" rel="tooltip" title="Volver al inicio" data-placement="bottom" href="~/Home/Index" target="_self">
                                <i class="fa fa-home"></i>
                                <p class="d-lg-none d-xl-none">Home</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" rel="tooltip" title="Acerca de" data-placement="bottom" href="~/Home/About" target="_self">
                                <i class="fa fa-slack" aria-hidden="true"></i>
                                <p class="d-lg-none d-xl-none">About</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" rel="tooltip" title="Iniciar sesin" data-placement="bottom" href="~/Home/Login" target="_self">
                                <i class="fa fa-user-o"></i>
                                <p class="d-lg-none d-xl-none">Login</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" rel="tooltip" title="Crear una cuenta nueva" data-placement="bottom" href="~/Home/Sign_up" target="_self">
                                <i class="fa fa-user-plus"></i>
                                <p class="d-lg-none d-xl-none">Registrarse</p>
                            </a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section>
        @RenderBody()
    </section>
    <footer class="">
        
        <div class="row justify-content-md-center sharing-area text-center">
            <div class="text-center col-md-12 col-lg-8">
                <h4>¡Gracias por apoyarnos!</h4>
            </div>
            <div class="text-center col-md-12 col-lg-8">
                <a target="_blank" href="https://www.twitter.com/Event_Manager" class="btn btn-neutral btn-icon btn-twitter btn-round btn-lg" rel="tooltip" title="Follow us">
                    <i class="fa fa-twitter"></i>
                </a>
                <a target="_blank" href="https://www.facebook.com/Event_Manager" class="btn btn-neutral btn-icon btn-facebook btn-round btn-lg" rel="tooltip" title="Like us">
                    <i class="fa fa-facebook-square"></i>
                </a>
                <a target="_blank" href="https://www.linkedin.com/Event_Manager" class="btn btn-neutral btn-icon btn-linkedin btn-lg btn-round" rel="tooltip" title="Follow us">
                    <i class="fa fa-linkedin"></i>
                </a>
                <a target="_blank" href="https://github.com/DarKPhuRioN/Events/tree/master/Events" class="btn btn-neutral btn-icon btn-github btn-round btn-lg" rel="tooltip" title="Star on Github">
                    <i class="fa fa-github"></i>
                </a>
            </div>
        </div>
    </footer>
    <script>
        var h = document.getElementById('cabecera');
        h.addEventListener("mouseover", function () {
            h.classList.remove("navbar-transparent");
        });
        h.addEventListener("mouseout", function () {
            h.classList.add("navbar-transparent");
        });
    </script>

    <script src="~/Scripts/Bootstrap4/jquery-3.1.1.slim.min.js"></script>
    <script src="~/Scripts/Bootstrap4/tether.min.js"></script>
    <script src="~/Scripts/now-ui-kit/popper.min.js"></script>
    <script src="~/Scripts/Bootstrap4/bootstrap.min.js"></script>
    <script src="~/Scripts/now-ui-kit/bootstrap-switch.js"></script>
    <script src="~/Scripts/now-ui-kit/nouislider.min.js" type="text/javascript"></script>
    <script src="~/Scripts/now-ui-kit/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="~/Scripts/now-ui-kit/now-ui-kit.js?v=1.1.0" type="text/javascript"></script>
</body>
</html>
